{
  "name": "volunteersng-api-test",
  "version": "1.0.0",
  "description": "An app that make volunteering easy",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "pretest": "cross-env NODE_ENV=test && cross-env NODE_ENV=test sequelize db:migrate && cross-env NODE_ENV=test sequelize db:seed:all",
    "posttest": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "test": "cross-env NODE_ENV=test && mocha -r ts-node/register src/tests/**/*.test.ts",
    "dev": "nodemon --exec ts-node src/server/index.ts",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "migrate": "sequelize  db:migrate",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
